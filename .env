# Application Configuration
APP_PORT=8501
APP_HOST=0.0.0.0

# Directories
DOWNLOAD_FOLDER=transcriptions
TRANSCRIPTION_FOLDER=transcriptions
MODEL_PATH=models
QDRANT_PATH=qdrant_data

# Selenium Configuration
SELENIUM_USE_GPU=true
SELENIUM_HEADLESS_MODE=false
SELENIUM_WINDOW_SIZE=1920,1080
SELENIUM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# YouTube Class Names (updated dynamically by update_youtube_classes.py)
YOUTUBE_SHOW_MORE_BUTTON_CLASS=tp-yt-paper-button[id="expand"]
YOUTUBE_SHOW_TRANSCRIPT_BUTTON_CLASS=//button[contains(text(), "Show transcript")]
YOUTUBE_TRANSCRIPT_PANEL_CLASS=ytd-transcript-search-panel-renderer
YOUTUBE_TRANSCRIPT_SEGMENTS_CLASS=yt-formatted-string.segment-text.style-scope.ytd-transcript-segment-renderer
YOUTUBE_VIDEO_TITLE_CLASS=span.style-scope.yt-formatted-string

# Playlist Selectors
YOUTUBE_PLAYLIST_CONTAINER_CLASS=ytd-playlist-video-list-renderer
YOUTUBE_PLAYLIST_VIDEO_RENDERER_CLASS=ytd-playlist-video-renderer
YOUTUBE_PLAYLIST_VIDEO_TITLE_ID=video-title
YOUTUBE_PLAYLIST_FALLBACK_CONTAINER_CLASS=ytd-playlist-panel-video-renderer

# Browser Preferences
BROWSER_PREFERENCE=edge  # edge, chrome, firefox
BROWSER_RETRY_ATTEMPTS=3
BROWSER_RETRY_DELAY_MIN=2
BROWSER_RETRY_DELAY_MAX=5

# Transcript Settings
MAX_TRANSCRIPT_RETRIES=3
TRANSCRIPT_LANGUAGES=en,es,fr,de,pt,it
AUTO_TRANSLATE_TO_ENGLISH=true

# Claude Configuration
CLAUDE_AUTO_ACCEPT_ALL_COMMANDS=true
CLAUDE_AUTO_ACCEPT_FILE_OPERATIONS=true
CLAUDE_AUTO_ACCEPT_DIRECTORY_OPERATIONS=true
CLAUDE_AUTO_ACCEPT_NETWORK_REQUESTS=true
CLAUDE_AUTO_ACCEPT_SYSTEM_COMMANDS=true
CLAUDE_AUTO_ACCEPT_GIT_OPERATIONS=true
CLAUDE_AUTO_ACCEPT_PACKAGE_MANAGEMENT=true
CLAUDE_FULL_ACCESS=true
CLAUDE_REQUIRE_CONFIRMATION=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/main.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_CONCURRENT_DOWNLOADS=3
DOWNLOAD_DELAY_SECONDS=3